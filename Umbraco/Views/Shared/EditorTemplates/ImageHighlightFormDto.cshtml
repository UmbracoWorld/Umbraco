
@using HtmlHelpers.BeginCollectionItemCore
@model Umbraco.Features.ShowcaseSubmit.ImageHighlightFormDto

@using (Html.BeginCollectionItem("ImageHighlights"))
{
    <div class="form-group ">
        <label asp-for="Title"></label>
        <textarea maxlength="250" asp-for="Title" class="form-control bg-peach-light" required type="text"></textarea>
        <span asp-validation-for="Title" class="form-text text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="Description"></label>
        <textarea maxlength="250" asp-for="Description" class="form-control bg-peach-light" required type="text"></textarea>
        <span asp-validation-for="Description" class="form-text text-danger"></span>
    </div>

    <div class="form-group ">
        <label asp-for="ImageSource"></label>
        <input maxlength="250" asp-for="ImageSource" class="form-control bg-peach-light" required type="file"/>
        <span asp-validation-for="ImageSource" class="form-text text-danger"></span>
    </div>
    
}